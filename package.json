{
  "name": "jest-github-action",
  "version": "1.0.0",
  "description": "Jest action adding checks to your pull requests",
  "main": "dist/index.js",
  "files": ["dist"],
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "build": "tsc",
    "pack": "ncc build lib/run.js -m -s --license licenses.txt",
    "prepack": "npm run build",
    "failing-test": "jest failing-tests",
    "test": "jest /tests/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/willcaul/jest-github-action.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "Jest",
    "Pull request"
  ],
  "author": "Will Caulfield <willcaul@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/willcaul/jest-github-action/issues"
  },
  "homepage": "https://github.com/willcaul/jest-github-action",
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "lodash": "^4.17.21",
    "markdown-table": "^2.0.0",
    "strip-ansi": "^6.0.0"
  },
  "devDependencies": {
    "@octokit/plugin-rest-endpoint-methods": "^10.1.5",
    "@types/jest": "^29.5.9",
    "@types/lodash": "^4.14.202",
    "@types/markdown-table": "^2.0.0",
    "@types/node": "^20.9.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^29.7.0",
    "prettier": "^2.0.4",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.5"
  }
}
